<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">


    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <com.example.scanner.util.ScanOverlayView
        android:id="@+id/overlayMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <FrameLayout
        android:id="@+id/scanArea"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <View
            android:id="@+id/scanLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/scanner_line_gradient_down"/>

        <View
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:background="@color/txt_color_blue"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="top|start"/>

        <View
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@color/txt_color_blue"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="top|start"/>

        <!-- Top Right -->
        <View
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:background="@color/txt_color_blue"
            android:layout_gravity="top|end"/>

        <View
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@color/txt_color_blue"
            android:layout_gravity="top|end"/>

        <!-- Bottom Left -->
        <View
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:background="@color/txt_color_blue"
            android:layout_gravity="bottom|start"/>

        <View
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@color/txt_color_blue"
            android:layout_gravity="bottom|start"/>

        <!-- Bottom Right -->
        <View
            android:layout_width="30dp"
            android:layout_height="4dp"
            android:background="@color/txt_color_blue"
            android:layout_gravity="bottom|end"/>

        <View
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@color/txt_color_blue"
            android:layout_gravity="bottom|end"/>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/zoomContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scanArea"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnZoomOut"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_7sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_icon_mainus" />

        <SeekBar
            android:id="@+id/seekZoom"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/txt_color_blue"
            android:thumbTint="@color/txt_color_blue" />

        <ImageView
            android:id="@+id/btnZoomIn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_icon_plus" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zoomContainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_16sdp"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/bg_action_bar"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/flashlightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnFlashlight"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/ic_flashlight" />

            <TextView
                android:id="@+id/tvFlashlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/flashlight"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                app:autoSizePresetSizes="@array/text_sizes"
                app:autoSizeTextType="uniform" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
